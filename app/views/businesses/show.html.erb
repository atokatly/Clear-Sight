<h1>Welcome to the <%=@business.company%> homepage.</h1>
<p>Employees:</p>
<ul>
  <%@business.users.each do |employee| %>
    <li>
      <%=link_to "#{employee.f_name} #{employee.l_name} -- #{employee.title}", user_path(employee.id)%>
    </li>
  <%end%>
</ul>
<p>Current Jobs:</p>
<ul>
  <%@business.users.each do |user| %>
  <%user.jobs.each do |job|%>
    <li>
      <%= link_to "#{job.title}", job_path(job.id)%>
    </li>
    <%end%>
    <%end%>
  </ul>
<p>Current Tasks:</p>
<ul>
  <%@tasks.each do |task| %>
    <li><%=link_to "#{task.title}", job_task_path(task.job_id,task) %></li>
  <%end%>
</ul>
