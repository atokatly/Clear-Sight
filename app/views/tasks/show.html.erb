<h1>Task: <%=@task.title%></h1>
<p>Task owner: <%= link_to "#{@user.f_name} #{@user.l_name}", user_path(@user) %></p>
<p>Job: <%= link_to "#{@job.title}", job_path(@job)%></p>
<p>Description: <%=@task.description%></p>
<div class="comment">
<p>Comments: </p>
  <%@comments.each do |comment| %>
    <%if current_user == comment.user %>
    <p><%=link_to "#{comment.user.f_name} #{comment.user.l_name}", user_path(comment.user)%>: <%=comment.comment %> <%=link_to "Edit", edit_comment_path(comment)%></p>
    <%else%>
    <p><%=link_to "#{comment.user.f_name} #{comment.user.l_name}", user_path(comment.user)%>: <%=comment.comment %></p>
    <%end%>
  <%end%>
  <%if @user.business == current_user.business %>
    <%=link_to "Add comment", new_job_task_comment_path(@job,@task)%>
  <%end%>
</div>
