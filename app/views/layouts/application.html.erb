<!DOCTYPE html>
<html>
  <head>
    <title>ClearSight</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <nav class="navbar navbar-default">
         <div class="container-fluid">
           <div class="navbar-header">
       <% if current_user %>
         <%= "Logged in as #{current_user.username}"%>
         <span class="icon-bar"><%= link_to "logout", logout_path %></span>

       <% else %>
         <span class="icon-bar"><%= link_to "Log in", login_path %></span>
         <span class="icon-bar"><%= link_to "Sign Up", new_user_path %></span>
       <% end %>

     </div>
     </div>
     </nav>
   </div>
    <%= yield %>
    <div id="footer">

    </div>
  </body>
</html>
